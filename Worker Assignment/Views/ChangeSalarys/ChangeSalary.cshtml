@model Worker_Assignment.ViewModel.WorkerFormSalaryViewModel

@{
    ViewBag.Title = "Change Salary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Up or Down Salary for worker @Model.Worker.Name</h2>
@using (Html.BeginForm("Save", "ChangeSalarys"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.ChangeSalary.UporDownSalary)
        @Html.TextBoxFor(c => c.ChangeSalary.UporDownSalary, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ChangeSalary.WorkerId)
        @Html.DropDownListFor(c=>c.ChangeSalary.WorkerId, new SelectList(Model.Workers, "Id", "Name"),new { @class = "form-control" })
    </div>
 <button type="submit" class="btn btn-primary">Save</button>
}
