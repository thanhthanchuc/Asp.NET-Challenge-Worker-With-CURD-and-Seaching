@model Worker_Assignment.Models.Worker

@{
    ViewBag.Title = "Delete Worker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Worker @Model.Name</h2>
@using (Html.BeginForm("Delete", "Workers"))
{
    <p>Are you sure you want to delete this worker?</p>
    @Html.ActionLink("Delete", "Delete", "Workers", new {id = Model.Id}, new {@class="btn btn-danger"})
    <p> </p>
}

@Html.ActionLink("Return Home", "Index", "Workers", new {@class="btn btn-primary"})
