@model Worker_Assignment.ViewModel.WorkerFormSalaryViewModel

@{
    ViewBag.Title = "Seach Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Seach Result for input: @Model.Input</h2>
@if (Model.Workers.Count() != 0)
{
    <table class="table table-boreder">
        <thead>
        <tr>
            <td>Name</td>
            <td>Location</td>
            <td>Salary</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var worker in Model.Workers)
        {
            <tr>
                <td>@worker.Name</td>
                <td>@worker.Location</td>
                <td>@worker.Salary</td>
            </tr>
        }
        
        </tbody>
    </table>
}
else
{
    <text>We don't have any worker equal this key word.</text>
}
